{
	"name": "narkniro/wordpress-site-template",
	"type": "project",
	"description": "Wordpress site template",
	"minimum-stability": "stable",
	"prefer-stable": true,
	"authors": [
		{
			"name": "Mark Houben",
			"email": "markhouben91@gmail.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "path",
			"url": "packages/*"
		},
		{
			"type": "path",
			"url": "theme/*"
		}
	],
	"extra": {
		"helhum/dotenv-connector": {
			"env-file": ".env"
		},
		"wordpress-install-dir": "public",
		"installer-paths": {
			"public/wp-content/mu-plugins/{$name}": [
				"type:wordpress-muplugin"
			],
			"public/wp-content/plugins/{$name}": [
				"type:wordpress-plugin"
			],
			"public/wp-content/themes/{$name}": [
				"type:wordpress-theme"
			]
		}
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"johnpbloch/wordpress-core-installer": true,
			"composer/installers": true,
			"helhum/dotenv-connector": true
		}
	},
	"require": {
		"helhum/dotenv-connector": "^3.0",
		"johnpbloch/wordpress": "^5.9",
		"wp-cli/wp-cli": "^2.6",
		"wpackagist-plugin/wordpress-importer": "^0.7.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.6"
	},
	"scripts": {
		"post-update-cmd": [
			"wp core update-db --path=./public",
			"wp core language update --path=./public"
		]
	}
}
